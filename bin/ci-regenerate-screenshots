#!/usr/bin/env bash

readonly SCRIPT_SOURCE="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd "${SCRIPT_SOURCE}/.." || exit 1

docker run -it --rm -v "$(pwd)":/x-postpress kherrick/x-postpress-test:latest \
  bash -c 'npm run typescript && npm run lint-fix && sudo npx -q mocha ./test/integration/screenshots-baseline/regenerate.js --timeout=30000'
